extends layout

block scripts

block content
    .layout-transparent.mdl-layout.mdl-js-layout
        header.mdl-layout__header.mdl-layout__header--transparent
            .mdl-layout__header-row
                // Title
                span.mdl-layout-title
                // Add spacer, to align navigation to the right
                .mdl-layout-spacer
                // Navigation (right)
                nav.mdl-navigation
                    // Inbox badges
                    a.mdl-navigation__link(href="")
                        .mdl-badge(data-badge='n') Inbox
        .mdl-layout__drawer
            span.mdl-layout-title f
            nav.mdl-navigation
                a.mdl-navigation__link(href='') Link
                a.mdl-navigation__link(href='') Link
                a.mdl-navigation__link(href='') Link
                a.mdl-navigation__link(href='') Link
        main.mdl-layout__content
            #music-main.container
            .player
                #cd.cd
                    #out.out
                    #album.album.albumhover
                    #in.in.albumhover
                .action
                    a.music-control(href='javascript:music_play()')
                        img#play(src='/images/play.png')
                    input#range(type='range', min='0', max='10', value='5', onchange='volume(this.value)')
                    a.music-control(href='javascript:next_music()')
                        img#next_music(src='/images/forward.png')
                .info
                    span#music_name
                    span#artist
                #music_lrc.music_lrc
                audio#player


